(define char-word? (c)
  (or
   (char-alphabetic? c)
   (char-numeric? c)
   (= c #\!)
   (= c #\$)
   (= c #\%)
   (= c #\&)
   (= c #\*)
   (= c #\+)
   (= c #\-)
   (= c #\.)
   (= c #\/)
   (= c #\:)
   (= c #\<)
   (= c #\=)
   (= c #\>)
   (= c #\?)
   (= c #\@)
   (= c #\^)
   (= c #\_)
   (= c #\~)))

(define parse-word
  (parse-token char-word?))
